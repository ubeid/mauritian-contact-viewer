<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contact_details_item_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/contact_details_operator"
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/contact_details_phone_number"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/image_desc"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" />

    <TextView
        android:id="@+id/contact_details_phone_number"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/contact_details_sendsms"
        android:layout_toRightOf="@id/contact_details_operator"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/primary_text_light" />

    <ImageView
        android:id="@+id/contact_details_sendsms"
        android:layout_width="56dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/image_desc"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:onClick=""
        android:src="@drawable/ic_textsms_white_48dp" />


</RelativeLayout>
